vectorHelpers = vectorHelpers or {}

vectorHelpers.addVectors = function(v1, v2)
	return {
		v1[1] + v2[1],
		v1[2] + v2[2],
		v1[3] + v2[3]
	}
end

vectorHelpers.subtractVectors = function(v1, v2)
	return {
		v1[1] - v2[1],
		v1[2] - v2[2],
		v1[3] - v2[3]
	}
end

vectorHelpers.print = function(v)
	print("{" .. v[1] .. ", " .. v[2] .. "," ..v[3] .. "}")
end
